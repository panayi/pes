{
  "name": "pesposa",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "flow-bin": "^0.64.0",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.3",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-latest": "^6.24.1",
    "buffer-loader": "^0.0.1",
    "copy-webpack-plugin": "^4.4.2",
    "dotenv-webpack": "^1.5.4",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-ramda": "^2.5.0",
    "firebase-bolt": "^0.8.2",
    "firebase-tools": "^3.17.4",
    "husky": "^0.14.3",
    "json-loader": "^0.5.7",
    "lint-staged": "^7.0.0",
    "mkdirp": "^0.5.1",
    "node-cmd": "^3.0.0",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.11.1",
    "svg-inline-loader": "^0.8.0",
    "uglifyjs-webpack-plugin": "^1.2.2",
    "webpack": "3.10.0",
    "webpack-cli": "^2.0.9",
    "webpack-merge": "^4.1.2",
    "winston": "^2.4.1",
    "winston-color": "^1.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "start:web": "cd packages/web && yarn start",
    "lint": "./node_modules/eslint/bin/eslint.js ./ --cache --ext .js,.es6,.jsx",
    "test:web": "cd packages/web && CI=true yarn test -- --bail",
    "flow": "flow",
    "flow-typed:install": "flow-typed install --libdefDir ./types",
    "codeclimate": "codeclimate analyze ./packages/**/src -f html > codeclimate-output.html",
    "build:admin": "webpack --config ./tools/config/webpack.admin.js",
    "admin": "yarn build:admin && node ./build/admin/index.js",
    "build:web": "cd packages/web && yarn build",
    "build:functions": "node ./tools/scripts/build.functions.js",
    "build:database": "node ./tools/scripts/build.database.js",
    "build": "yarn build:web && yarn build:functions && yarn build:database",
    "deploy:web": "firebase deploy --only hosting",
    "deploy:functions": "cd build/functions && yarn && npm rebuild && firebase deploy --only functions",
    "deploy:database": "firebase deploy --only database",
    "deploy": "yarn build && yarn deploy:web && yarn deploy:functions && yarn deploy:database"
  },
  "lint-staged": {
    "{packages/*/src,packages/web/test,tools}/**/*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add",
      "npm run test:web"
    ]
  }
}
