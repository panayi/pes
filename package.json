{
  "name": "pesposa",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "flow-bin": "^0.64.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-ramda": "^2.4.0",
    "husky": "^0.14.3",
    "npm-run-all": "^4.1.1",
    "prettier": "1.10.2",
    "raf": "^3.4.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "start:frontend": "cd packages/frontend && yarn start",
    "start:backend": "cd packages/backend && yarn start",
    "start": "run-p start:frontend start:backend",
    "lint": "./node_modules/eslint/bin/eslint.js ./ --cache --ext .js,.es6,.jsx",
    "test-once": "cd packages/frontend && yarn test-once -- --bail",
    "flow": "flow",
    "flow-typed:install": "flow-typed install --libdefDir ./types",
    "build:frontend": "cd packages/frontend && yarn build",
    "build:backend": "cd packages/backend && yarn build",
    "build": "run-p build:frontend build:backend",
    "admin": "cd packages/backend && yarn admin",
    "deploy:frontend": "cd packages/frontend && yarn deploy",
    "deploy:functions": "cd packages/backend && yarn deploy",
    "deploy:database": "cd packages/database && yarn deploy",
    "deploy": "run-p deploy:frontend deploy:functions && yarn deploy:database"
  },
  "lint-staged": {
    "{packages/*/src,packages/frontend/stories,packages/frontend/test}/**/*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add",
      "test-once"
    ]
  }
}
