  "scripts": {
    "precommit": "lint-staged",
    "start:ui": "cross-env NODE_PATH=src/ react-scripts start",
    "start:functions": "npm run build:functions && npm run firebase serve -- --only functions",
    "start": "run-p start:ui start:functions",
    "functions:shell": "cd backend && webpack && npm run firebase experimental:functions:shell",
    "test:unit": "cross-env NODE_PATH=src/ react-scripts test --env=jsdom",
    "test:e2e": "nightwatch",
    "lint": "./node_modules/eslint/bin/eslint.js ./ --cache --ext .js,.es6,.jsx",
    "build:ui": "cross-env NODE_PATH=src/ react-scripts build",
    "build:functions": "cd backend && webpack --config ./config/webpack.functions.js",
    "build:database": "npm run firebase-bolt database/rules.bolt",
    "build:admin": "cd backend && webpack --config ./config/webpack.admin.js",
    "build": "npm run build:ui && npm run build:functions && npm run build:database",
    "deploy:ui": "npm run build:ui && npm run firebase deploy -- --only hosting",
    "deploy:functions": "npm run build:functions && npm run firebase deploy -- --only functions",
    "deploy:database": "npm run build:database && npm run firebase deploy -- --only database",
    "deploy": "npm run build && npm run firebase deploy --",
    "admin": "npm run build:admin && node ./backend/build/admin/index.js",
    "setup:e2e": "selenium-standalone install",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "firebase": "./node_modules/firebase-tools/bin/firebase",
    "firebase-bolt": "./node_modules/firebase-bolt/bin/firebase-bolt",
    "flow": "flow",
    "generate": "./node_modules/redux-cli/bin/redux.js generate",
    "eject": "react-scripts eject"
  },
  "lint-staged": {
    "{backend,src,stories,test}/**/*.{js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "pre-push": [
    "lint"
  ]
}
