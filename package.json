{
  "name": "pesposa",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "flow-bin": "^0.64.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-ramda": "^2.4.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "npm-run-all": "^4.1.1",
    "prettier": "1.10.2",
    "raf": "^3.4.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "start:web": "cd packages/web && yarn start",
    "start:backend": "cd packages/backend && yarn start",
    "start": "run-p start:web start:backend",
    "lint": "./node_modules/eslint/bin/eslint.js ./ --cache --ext .js,.es6,.jsx",
    "test:web": "cd packages/web && CI=true yarn test -- --bail",
    "flow": "flow",
    "flow-typed:install": "flow-typed install --libdefDir ./types",
    "codeclimate": "codeclimate analyze ./packages/**/src -f html > codeclimate-output.html",
    "build:web": "cd packages/web && yarn build",
    "build:backend": "cd packages/backend && yarn build",
    "build": "run-p build:web build:backend",
    "admin": "cd packages/backend && yarn admin",
    "deploy:web": "cd packages/web && yarn deploy",
    "deploy:functions": "cd packages/backend && yarn deploy",
    "deploy:database": "cd packages/database && yarn deploy",
    "deploy": "run-p deploy:web deploy:functions && yarn deploy:database"
  },
  "lint-staged": {
    "{packages/*/src,packages/web/test}/**/*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add",
      "npm run test:web"
    ]
  }
}
