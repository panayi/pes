{
  "hosting": {
    "public": "packages/frontend/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "packages/backend/build/functions"
  },
  "database": {
    "rules": "packages/backend/build/rules.json"
  }
}
