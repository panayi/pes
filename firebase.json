{
  "hosting": {
    "public": "packages/web/build/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**/**",
        "function": "app"
      }
    ]
  },
  "functions": {
    "source": "packages/backend/build/functions"
  },
  "database": {
    "rules": "packages/database/rules.json"
  }
}
