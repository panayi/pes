{
  "hosting": {
    "public": "packages/web/build/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**/**",
        "function": "app"
      }
    ],
    "headers": [{
      "source": "**/**",
      "headers": [
        {
          "key": "x-frame-options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }]
  },
  "functions": {
    "source": "build/functions"
  },
  "database": {
    "rules": "build/database/rules.json"
  }
}
