{
  "hosting": {
    "public": "packages/client/web/build/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/sitemap.xml",
        "function": "api"
      },
      {
        "source": "/manager/**",
        "destination": "manager/index.html"
      },
      {
        "source": "**/**",
        "function": "app"
      }
    ]
  },
  "functions": {
    "source": "build/functions"
  },
  "database": {
    "rules": "build/database/rules.json"
  }
}
