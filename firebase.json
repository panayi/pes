{
  "hosting": {
    "public": "build/hosting/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      // Comment/uncomment to toggle maintenance mode
      {
        "source": "**/**",
        "destination": "/maintenance.html",
        "type": 503
      },
      {
        "source": "/sitemap.xml",
        "function": "api"
      },
      {
        "source": "/manager/**",
        "destination": "/manager/index.html"
      },
      {
        "source": "**/**",
        "function": "app"
      }
    ]
  },
  "functions": {
    "source": "build/functions"
  },
  "database": {
    "rules": "build/database/rules.json"
  }
}
